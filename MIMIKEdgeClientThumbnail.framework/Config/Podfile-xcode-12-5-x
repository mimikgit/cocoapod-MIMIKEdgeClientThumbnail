# Uncomment the next line to define a global platform for your project
platform :ios, '13.6'
source 'https://github.com/CocoaPods/Specs.git'
source 'https://github.com/mimikgit/cocoapod-edge-specs.git'

target 'MIMIKEdgeClientThumbnail' do
  # Comment the next line if you're not using Swift and don't want to use dynamic frameworks
  use_frameworks!
  
  pod 'MIMIKEdgeClient', '~> 12.5.1'
#  pod 'MIMIKEdgeClient', :path => '/Users/rb/Code/cocoapods_github/cocoapod-MIMIKEdgeClient'
  pod 'MIMIKEdgeClientProfile', '~> 12.5.1'
#  pod 'MIMIKEdgeClientProfile', :path => '/Users/rb/Code/cocoapods_github/cocoapod-MIMIKEdgeProfile'
  pod 'Alamofire', '~> 5.4.4'
  pod 'SwiftyJSON', '~> 5.0.1'
  
  # inhibit_all_warnings!
  
  post_install do |installer|
    installer.pods_project.targets.each do |target|
      target.build_configurations.each do |config|
        config.build_settings['ENABLE_BITCODE'] = 'YES'
        config.build_settings['ONLY_ACTIVE_ARCH'] = 'YES'
        config.build_settings['VALID_ARCHS'] = '$(ARCHS_STANDARD_64_BIT)'
        config.build_settings['SWIFT_VERSION'] = '5.4'
        config.build_settings['IPHONEOS_DEPLOYMENT_TARGET'] = '13.6'
      end
    end
  end
end
